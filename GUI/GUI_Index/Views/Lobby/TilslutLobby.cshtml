@model IEnumerable<Domain.Interfaces.ILobby>
@{
    ViewData["Title"] = "Tilslut Lobby";
}

<body>
    <div class="container">
        <button type="button" class="btn btn-post" onclick="location.href = '@Url.Action("PostLogInd", "Home")'">Tilbage</button>

        <div class="form-group left-Align ingamebox">
            <table>
                <th>Lobbies online</th>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            <a type="button" class="btn btn-post" asp-controller="Lobby"  asp-route-username="@Html.Value("username")" asp-route-password="@Html.Value("Password")" asp-route-lobbyId="@item.Id" asp-action="Lobby">@Html.DisplayFor(modelItem => item.Id)</a>              
                        </td>

                     </tr>
                }
            </table>
        </div>
    </div>
</body>