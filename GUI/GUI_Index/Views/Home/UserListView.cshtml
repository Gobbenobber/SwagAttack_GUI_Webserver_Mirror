@using GUI_Index.Models
@model List<GUI_Index.Models.User>

    @{
        
    }

<body>
    <div class="container">
        <div class="row">
            <div class="absolute-center is-responsive">
                <table class="table table-hover">
                    <thead>
                    <tr>
                        <th scope="col"> @Html.DisplayName("Username")</th>
                        <th scope="col">@Html.DisplayName("GivenName")</th>
                        <th scope="col">@Html.DisplayName("LastName")</th>
                        <th scope="col">@Html.DisplayName("Email")</th>
                    </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
    {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Username)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.GivenName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.LastName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Email)
                        </td>
                    </tr>
}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</body>
