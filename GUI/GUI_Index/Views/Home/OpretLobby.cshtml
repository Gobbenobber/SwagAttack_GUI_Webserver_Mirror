@model Domain.Interfaces.ILobby

@{
    ViewData["Title"] = "OpretLobby";
}

<style>
    label {
        font-weight: bold;
        display: block;
    }
</style>

<body>
    <div class="container">
        <div class="row">
            <div class="absolute-center is-responsive">
                <form method="post" formaction="@Url.Action("OpretLobby", "Home")">
                    <div class="form-group row">
                        <label for="Id" class="col-sm-2 col-form-label">LobbyId</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" id="LobbyName" placeholder="E.g. 'Vladimir'">
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="AdminUserName" class="col-sm-2 col-form-label">Username of the admin</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" id="AdminName" placeholder="E.g. 'Putin'">
                        </div>
                    </div>

                    <div class="form-group row">
                        <div class="col-sm-10 offset-sm-2">
                            <div class=".btn-group-vertical">
                                <button type="button" class="btn btn-post" id="OpretButton" onclick="location.href = '@Url.Action("TilslutLobby", "Home")'">Opret Lobby</button>
                                <button type="button" class="btn btn-post" onclick="location.href = '@Url.Action("PostLogInd", "Home")'">Tilbage</button>
                            </div>
                        </div>
                    </div>
                </form>

            </div>
        </div>
    </div>
</body>

<script src="~/lib/signalr.js"></script>
<script src="~/js/Lobby.js"></script>
